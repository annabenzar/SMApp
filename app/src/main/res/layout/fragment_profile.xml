<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment"
    tools:context=".ui.profile.ProfileFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Welcome!" />

    <TextView
        android:id="@+id/name_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/text_home"
        android:text="Your name" />


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/name_home"
        android:text="Name: " />
    <TextView
        android:id="@+id/profile_yourname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_name" />

    <TextView
        android:id="@+id/profile_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/profile_yourname"
        android:text="Firstname: " />

    <TextView
        android:id="@+id/profile_yourfirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_firstname" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/profile_yourfirstname"
        android:text="E-mail: " />

    <TextView
        android:id="@+id/profile_youremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_email" />

    <TextView
        android:id="@+id/profile_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/profile_youremail"
        android:text="Age: " />

    <TextView
        android:id="@+id/profile_yourage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/profile_age"/>

    <LinearLayout
        android:id="@+id/layout_buttons_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/profile_yourage"
        android:weightSum="2">
        <Button
            android:id="@+id/addEditData_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:textColor="#FFFFFF"
            android:text="Add/Edit data"/>
        <Button
            android:id="@+id/uploadRecipe_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="#FFFFFF"
            android:text="Upload a recipe"/>

    </LinearLayout>

    <Button
        android:id="@+id/searchFam_button"
        android:layout_width="300dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="1dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners"
        android:textColor="#FFFFFF"
        android:layout_below="@id/layout_buttons_profile"
        android:text="Search fam mermbers"/>

</RelativeLayout>

