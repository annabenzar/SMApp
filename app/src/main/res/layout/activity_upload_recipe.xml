<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile.UploadARecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_upload"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Upload a recipe!"/>
        <EditText
            android:id="@+id/name_et_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:hint="Enter name"/>

        <EditText
            android:id="@+id/time_et_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:hint="Enter time"/>
        <EditText
            android:id="@+id/type_et_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:hint="Enter type"/>
        <EditText
            android:id="@+id/ingredients_et_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:hint="Enter ingredients"/>
        <EditText
            android:id="@+id/preparation_et_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:hint="How to"/>

        <LinearLayout
            android:id="@+id/buttons_layout_upload"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_photo_choose"
                android:text="Choose Video"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_photo_upload"
                android:text="Upload"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
