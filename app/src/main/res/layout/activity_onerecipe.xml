<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OneRecipeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:scaleType="center">
        <VideoView
            android:id="@+id/img_OneRecipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="center" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_OneRecipe"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/name_OneRecipe"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Name"/>
        <TextView
            android:id="@+id/time_OneRecipe"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Time"/>
        <Button
            android:id="@+id/button_wish"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="PLAn meal" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- things to scroll -->
            <TextView
                android:id="@+id/ingredients_visible_OneRecipe"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:typeface="monospace"
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="Ingredients"/>
            <TextView
                android:id="@+id/ingredients_OneRecipe"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="Ingredients_appears_here"/>


            <TextView
                android:id="@+id/prep_visible_OneRecipe"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="italic"
                android:typeface="monospace"
                android:text="How to"/>

            <TextView
                android:id="@+id/preparation_OneRecipe"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:padding="5dp"
                android:textStyle="italic"
                android:text="HowTo_appears_here"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_gravity="center"
                android:background="#d3d3d3">

                <TextView
                    android:id="@+id/by_OneRecipe"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textAlignment="textEnd"
                    android:layout_gravity="center_vertical"
                    android:text="by"/>

                <TextView
                    android:id="@+id/author_OneRecipe"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:textAlignment="textStart"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="Author_appears_here"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>